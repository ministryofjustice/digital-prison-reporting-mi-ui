{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "noEmit": false,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "ignoreDeprecations": "5.0"
  },
  "exclude": ["node_modules", "assets/**/*.js", "cypress-tests", "dist", "cypress.config.ts", "coverage"],
  "include": ["**/*.js", "**/*.ts"]
}
